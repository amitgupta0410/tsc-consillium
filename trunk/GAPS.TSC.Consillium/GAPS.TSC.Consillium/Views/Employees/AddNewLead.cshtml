@using System.Web.Mvc.Html;
@model GAPS.TSC.Consillium.Models.AddLeadModel


@{
    ViewBag.Title = "Add New Lead";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="page-title">
            Add New Lead/Expert
        </h3>
    </div>
</div>
<hr />
<div class="row">
<div class="col-md-12">
@Html.BeginForm("AddNewLead", "Employees", FormMethod.Get))
{

    <div class="col-md-3">
        <div class="form-group">
            <label><b>Title</b></label><br>
            @Html.DropDownListFor(x => x.Title,new SelectList(Model.TitleOptions, "Key", "Value"), "All", new { @class = "form-control" })


        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Name</b></label>
            <input class="form-control" id="Name" name="Name" type="text" value="">
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <div style="padding-top: 9px"></div>
            <br/>
            <input type="submit" class="btn btn-primary" value="Check For Duplication"/>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Country</b></label><br>
            <select class="form-control">
                <option>Option1</option>
                <option>Option2</option>
            </select>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>City</b></label>
            <input class="form-control" id="City" name="City" type="text" value="">
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Email</b></label>
            <input class="form-control" id="Email" name="Email" type="text" value="">
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <div style="padding-top: 9px"></div>
            <br/>
            <input type="submit" class="btn btn-primary" value="Check For Duplicates"/>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Contact No</b></label>
            <input class="form-control" id="ContactNo" name="ContactNo" type="text" value="">
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Contacted On</b></label>
            <select class="form-control">
                <option>Option1</option>
                <option>Option2</option>
            </select>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>LinkedIn</b></label>
            <input class="form-control" id="LinkedIn" name="LinkedIn" type="text" value="">
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-2">
        <div class="form-group">
            <label><b>Honorarium</b></label>
            <select class="form-control">
                <option>Option1</option>
                <option>Option2</option>
            </select>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <div style="padding-top: 7px"></div>
            <br>
            <select class="form-control">
                <option></option>
            </select>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Lead Status</b></label>
            <select class="form-control">
                <option>Option1</option>
                <option>Option2</option>
            </select>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Lead Comments</b></label>
            <textarea class="form-control" rows="2" id="Comments" style="width: 299px; height: 69px;"></textarea>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <div style="padding-top: 23px"></div><br/>
            <input type="submit" class="btn btn-primary" value="Add CV">
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <div style="padding-top: 30px"></div><br/>
            @*<a href="#">View CV</a>*@
            <a href="#" style="margin-left: -114px;">View CV</a>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>ChangeRecruiter</b></label>
            <select class="form-control">
                <option>Option1</option>
                <option>Option2</option>
            </select>
        </div>
    </div>

    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Designation</b></label>
            <input class="form-control" id="Designation" name="Designation" type="text" value="">
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>From</b></label>
            <input class="form-control date" id="From" name="From" type="text" value="">
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Organization</b></label>
            <input class="form-control" id="Organization" name="Organization" type="text" value="">
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>To</b></label>
            <input class="form-control date" id="To" name="To" type="text" value="">
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Add New" style="height: 110px; margin-top: -49px; width: 82px;">
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>JobHistory</b></label>
            <textarea class="form-control" rows="2" id="JobHistory" style="width: 299px; height: 69px;"></textarea>
        </div>
    </div>

    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Source</b></label>
            <input class="form-control" id="Source" name="Source" type="text" value="">
        </div>
    </div>
    <div class="row col-md-3">
        <select class="form-control" style="margin-top: 25px;">
            <option>Strategic</option>
            <option>On Project</option>
        </select>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-3">
        <div class="form-group">
            <label><b>Notes</b></label>
            <input class="form-control" id="Notes" name="Notes" type="text" value="">
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-1">
        <div class="form-group">
            <div style="padding-top: 9px"></div><br/>
            <input type="submit" class="btn btn-primary" value="Delete Lead"/>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <div style="padding-top: 9px"></div><br/>
            <input type="submit" class="btn btn-primary" value="Save" style="margin-left: 17px; padding-left: 22px; padding-right: 22px;">
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <div style="padding-top: 9px"></div><br/>
            <input type="submit" class="btn btn-primary" value="Convert"/>
        </div>
    </div>
}
</div>
</div>
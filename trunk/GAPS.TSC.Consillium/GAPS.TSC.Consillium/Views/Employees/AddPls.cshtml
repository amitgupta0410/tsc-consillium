@model GAPS.TSC.Consillium.Models.AddProjectLeadModel
@{
    ViewBag.Title = "AddPls";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="page-title">
            Add PLs
        </h3>
    </div>
</div>
@Html.Partial("_PartialMessage")
<hr />
<div class="row">
    <div class="col-md-12">
        @using (@Html.BeginForm("AddPls", "Employees", FormMethod.Post))
        {
            <div class="col-md-4">
                <div class="form-group">
                    <label><b>PL Employee Id</b></label>
                    @Html.TextBoxFor(x => x.Id, new { @class = "form-control ", @Value = "" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-2">
                <div class="form-group">
                    <input type="submit" value="save" class="btn btn-primary">
                </div>
            </div>
        }
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="col-md-3">
            <h3>Pls</h3>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-6">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Emp Id</th>
                            <th><label>Name</label></th>
                            <th><label>Status</label></th>
                            @*<th><label>Department</label></th>
                                <th><label>Designation</label></th>*@
                            <th></th>
                        </tr>
                        @if (Model.ProjectLead != null)
                        {
                            foreach (var projectLead in Model.ProjectLead)
                            {
                                <tr>
                                    <td>@projectLead.UserId</td>
                                    <td>@if (Model.ApiUsers.ContainsKey(projectLead.UserId)) {
                      @Model.ApiUsers[projectLead.UserId]}</td>
                                    <td>@projectLead.IsActive</td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

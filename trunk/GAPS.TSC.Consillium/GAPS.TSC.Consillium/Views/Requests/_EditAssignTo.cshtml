@model GAPS.TSC.Consillium.Models.AssignViewModel

@using (Html.BeginForm("UpdateAssignTo", "Requests", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label><b>Assign To*</b></label><br />
                @Html.ListBoxFor(x => x.AssignedToIds, new SelectList(Model.AssignToList, "Key", "Value"), new { @class = "form-control chosen-select", multiple = "multiple",Value=Model.AssignedToIds, @data_placeholder = "All" })
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-6">
            <div class="form-group">
                <label><b>Start Date</b></label><br />
                @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", Value = Model.StartDate.GetValueOrDefault().ToString("dd/MM/yyyy") })
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-6">
            <div class="form-group">
                <label><b>Comments</b></label><br />
                @Html.TextAreaFor(model => model.Comments, new
                {
                    @class = "form-control",
                    value = @Model.Comments,
                    maxlength = 50,
                    style = "width: 200px; height: 100px;"
                })
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-2">
            <div class="form-group">
                <div style="padding-top: 9px"></div><br />
                <input type="submit" class="btn btn-primary" value="Update" style="margin-left: 17px; padding-left: 22px; padding-right: 22px;">
            </div>
        </div>
    </div>
}
@section scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            $(".chosen-select").chosen();


        });
    </script>
}
@Html.Partial("_PartialScripts")

